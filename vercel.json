{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": "vite",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS, PUT, DELETE",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, X-Requested-With, Accept, Origin",
        "Access-Control-Allow-Credentials": "true"
      }
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*\\.js)",
      "dest": "/$1",
      "headers": {
        "Content-Type": "application/javascript; charset=utf-8"
      }
    },
    {
      "src": "/(.*\\.css)",
      "dest": "/$1",
      "headers": {
        "Content-Type": "text/css; charset=utf-8"
      }
    },
    {
      "src": "/(.*\\.woff2)",
      "dest": "/$1",
      "headers": {
        "Content-Type": "font/woff2"
      }
    },
    {
      "src": "/(.*\\.woff)",
      "dest": "/$1",
      "headers": {
        "Content-Type": "font/woff"
      }
    },
    {
      "src": "/(.*\\.ttf)",
      "dest": "/$1",
      "headers": {
        "Content-Type": "font/ttf"
      }
    },
    {
      "src": "/(.*\\.png)",
      "dest": "/$1",
      "headers": {
        "Content-Type": "image/png"
      }
    },
    {
      "src": "/(.*\\.jpg|.*\\.jpeg)",
      "dest": "/$1",
      "headers": {
        "Content-Type": "image/jpeg"
      }
    },
    {
      "src": "/(.*\\.svg)",
      "dest": "/$1",
      "headers": {
        "Content-Type": "image/svg+xml"
      }
    },
    {
      "src": "/(.*\\.ico)",
      "dest": "/$1",
      "headers": {
        "Content-Type": "image/x-icon"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/fetch-templates.js": {
      "maxDuration": 30
    },
    "api/fetch-media.js": {
      "maxDuration": 30
    },
    "api/send-message.js": {
      "maxDuration": 30
    },
    "api/create-template.js": {
      "maxDuration": 60
    },
            "api/delete-template.js": {
          "maxDuration": 30
        },
        "api/upload-media.js": {
          "maxDuration": 60
        },
        "api/delete-media.js": {
          "maxDuration": 30
        },
        "api/download-media.js": {
          "maxDuration": 60
        },
        "api/fetch-reports.js": {
          "maxDuration": 30
        },
        "api/fetch-wallet-balance.js": {
          "maxDuration": 30
        }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
